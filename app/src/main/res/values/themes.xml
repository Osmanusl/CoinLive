<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoinLive" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryVariant">@color/appColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appColor</item>
        <item name="colorSecondaryVariant">@color/appColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CoinLive.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CoinLive.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CoinLive.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Login tasarımı için -->
    <style name="Login.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/proximanova_regular</item>
        <item name="android:textSize">17.5sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_login_edittext</item>
        <item name="android:textColorHint">@color/login_hint</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="Action.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/proximanova_bold</item>
        <item name="android:background">@drawable/bg_action_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>